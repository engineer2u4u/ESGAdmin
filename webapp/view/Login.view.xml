<mvc:View controllerName="ESGAdmin.ESGAdmin.controller.Login" xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core" displayBlock="true"
    xmlns="sap.m">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}" titleAlignment="Center">
                    <content>
                        <FlexBox id="mainFlexBox" class="bgGrey" height="100%" alignItems="Center" justifyContent="Center" direction="Row">
                            <VBox id="logoVBox" justifyContent="Center" alignItems="Center" width="auto">
                                <Image id="mainLogo" src="./assets/ESG Kosh.png" class="sapUiMediumMargin" width="500px" />
                                <Image id="secondaryLogo" src="./assets/koshish logo.png" class="sapUiMediumMargin" width="100px" />
                                <layoutData>
                                    <FlexItemData growFactor="1" />
                                </layoutData>
                            </VBox>
                            <VBox id="formVBox" width="400px" justifyContent="Center" class="font-black sapUiMediumMarginEnd">
                                <VBox class="sapUiMediumMargin">
                                    <Title titleStyle="H2" text="Welcome back," />
                                    <Title titleStyle="H4" text="Login to continue " />
                                    <VBox class="sapUiSmallMarginTop">
                                        <Label text="Username" labelFor="passwordInput" />
                                        <Input id="userInput" placeholder="Enter username" />
                                    </VBox>
                                    <VBox class="sapUiSmallMarginTopBottom">
                                        <Label id='pass' text="Password" labelFor="passwordInput" />
                                        <Input id="passwordInput" type="Password" placeholder="Enter password" />
                                    </VBox>
                                    <Button type="Emphasized" width="100%" text="Login" press="onLogin" />
                                </VBox>
                            </VBox>
                        </FlexBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
