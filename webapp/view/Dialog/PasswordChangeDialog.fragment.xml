<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <!-- Dialog for password change -->
    <Dialog
        id="passwordChangeDialog"
        title="Change Password"
        stretchOnPhone="true"
    >
        <VBox class="sapUiSmallMargin">
            <!-- Current Password Input -->
            <Label text="Current Password" />
            <HBox>
                <Input
                    id="currentPassword"
                    type="Password"
                />
                <Button
                    icon="sap-icon://show"
                    press="onTogglePasswordVisibility"
                    data-input="currentPassword"
                />
            </HBox>

            <!-- New Password Input -->
            <Label text="New Password" />
            <HBox>
                <Input
                    id="newPassword"
                    type="Password"
                />
                <Button
                    icon="sap-icon://show"
                    press="onTogglePasswordVisibility"
                    data-input="newPassword"
                />
            </HBox>

            <!-- Confirm New Password Input -->
            <Label text="Confirm New Password" />
            <HBox>
                <Input
                    id="confirmPassword"
                    type="Password"
                />
                <Button
                    icon="sap-icon://show"
                    press="onTogglePasswordVisibility"
                    data-input="confirmPassword"
                />
            </HBox>
        </VBox>

        <!-- Dialog Buttons -->
        <endButton>
            <Button
                text="Change Password"
                type="Emphasized"
                press="onChangePassword"
            />
        </endButton>
        <beginButton>
            <Button
                text="Close"
                press="onCloseDialog"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
