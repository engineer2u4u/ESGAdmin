<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    controllerName="ESGAdmin.ESGAdmin.controller.ManageClients"
>
    <Page
        title="Manage Clients"
        titleAlignment="Center"
    >
    <customHeader>
            <OverflowToolbar>
                <Button
                    icon="sap-icon://nav-back"
                    tooltip="{i18n>back}"
                    press="onNavBack"
                />
                <Image
                    src="./assets/ESG Kosh.png"
                    class="sapUiMediumMargin"
                    width="60px"
                    press="onHomePress"
                />
                <ToolbarSpacer />
                <Title text="Manage Clients" />
                <ToolbarSpacer />
                <HBox alignItems="Center">
                    <Button
                        icon="sap-icon://bell"
                        tooltip="Notifications"
                        press="onNotificationPress"
                    />
                    <Button
                        icon="sap-icon://log"
                        tooltip="Log Out"
                        press="onLogOut"
                    />
                </HBox>
            </OverflowToolbar>
        </customHeader>
        <content>
            <VBox class="sapUiSmallMargin">
                <VBox
                    width="100%"
                    alignItems="Start"
                    justifyContent="Start"
                >
                    <!-- Title -->
                    <Title
                        text="Filter"
                        level="H2"
                    />

                    <!-- Filter HBox -->
                    <HBox
                        width="100%"
                        alignItems="Center"
                        class="sapUiSmallMarginBottom"
                    >
                        <HBox
                            alignItems="Center"
                            justifyContent="Start"
                        >
                            <!-- Organization Filter -->
                            <Label
                                text="Organization"
                                labelFor="organizationSelect"
                                class="sapUiTinyMarginEnd"
                            />
                            <Select
                                id="organizationSelect"
                                width="200px"
                                items="{path: 'orgData>/results'}"
                                class="sapUiTinyMarginEnd"
                            >
                                <core:Item
                                    key="{orgData>orgID}"
                                    text="{orgData>orgName}"
                                />
                            </Select>
                        </HBox>
                        <Button
                            text="Search"
                            press="onSearch"
                            type="Emphasized"
                            class="sapUiTinyMarginEnd"
                        />
                        <Button
                            text="Reset"
                            press="onReset"
                        />
                    </HBox>
                </VBox>
            </VBox>
            <!-- Box to Display the Form -->
            <VBox
                id="detailsBox"
                visible="false"
                class="sapUiSmallMargin"
            >
                <Title
                    text="Details"
                    level="H3"
                />
                <!-- Form to Display Data -->
                <form:SimpleForm
                    id="detailsForm"
                    class="sapUiSmallMarginTop"
                    editable="false"
                    layout="ResponsiveGridLayout"
                    labelSpanM="3"
                    columnsM="1"
                >
                <core:Title text="Organization Info" />
                    <Label text="Organization Name" />
                    <Text text="{/organisationName}" />

                    <Label text="Domain" />
                    <Text text="{/domain}" />

                    <Label text="Country" />
                    <Text text="{/country}" />

                    <Label text="Domain" />
                    <Text text="{/domain}" />

                    <Label text="Number of Employees" />
                    <Text text="{/numEmployees}" />

                    <Label text="Renewable Energy" />
                    <Text text="{/renewableEnergy}" />

                    <Label text="Status" />
                    <Text text="{/status}" />

                 <core:Title text="Admin Info" />   
                    <Label text="Admin" />
                    <Text text="{/admin}" />

                    <Label text="Admin Email" />
                    <Text text="{/adminEmail}" />

                    <Label text="Admin Phone" />
                    <Text text="{/adminPhone}" />
                </form:SimpleForm>
                <HBox alignContent="SpaceBetween">
                                <Button
                        icon="sap-icon://map-fill"
                        text="Branches"
                        press="onClientBranches"
                        type="Emphasized"
                        class="sapUiTinyMarginEnd"
                    />
                <Button
                        icon="sap-icon://employee"
                        text="Employees"
                        press="onAddClient"
                        type="Emphasized"
                        class="sapUiTinyMarginEnd"
                    />
                <Button
                        icon="sap-icon://excel-attachment"
                        text="Reporting Sheets"
                        press="onViewSheets"
                        type="Emphasized"
                        class="sapUiTinyMarginEnd"
                    />
                    </HBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
