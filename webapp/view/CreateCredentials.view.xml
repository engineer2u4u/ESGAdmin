                                    columnsM="2"
                                    columnsXL="2"
                                    singleContainerFullSize="false"
                                >
                                    <core:Title text="Personal Info" />
                                    <Label
                                        required="true"
                                        text="Name"
                                    />
                                    <Input
                                        id="idName"
                                        placeholder="Enter name"
                                    />
                                    <Label
                                        required="true"
                                        text="Email"
                                    />
                                    <Input
                                        id="idEmail"
                                        placeholder="Enter email"
                                    />
                                    <Label
                                        required="true"
                                        text="Phone"
                                    />
                                    <Input
                                        id="idPhone"
                                        placeholder="Enter phone (include country code, ex: +91-9999999999)"
                                    />
                                    <core:Title text="Choose" />
                                    <Label
                                        required="true"
                                        text="Role"
                                    />
                                    <Select id="idRole">
                                        <core:Item
                                            key="Admin"
                                            text="Admin"
                                        />
                                        <core:Item
                                            key="Manager"
